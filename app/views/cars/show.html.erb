<h2>
  <%= link_to 'Go to HomePage', '/', class:"button button2", method: :get %>
  <%= link_to 'Go to Cars', '/cars', class:"button button2", method: :get %>
  <%= link_to 'Go to Dealerships', '/dealerships', class:"button button2", method: :get %>
</h2>

<hr>

<h1><%= @car.model %></h1>

<p>Model: <%= @car.model.capitalize %></p>
<p>Make: <%= @car.make.capitalize %></p>
<p>Year: <%= @car.year %></p>
<p>Under 100k miles: <%= @car.under_100k_miles %></p>


<p>
  <%= link_to "Edit #{@car.model.capitalize}", "/cars/#{@car.id}/edit", class:"button button2", method: :get %>
  <%= link_to "Delete #{@car.model.capitalize}" , "/cars/#{@car.id}/delete", class:"button button_delete", method: :delete %>
</p>

