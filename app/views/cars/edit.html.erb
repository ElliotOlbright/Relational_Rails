<h2>
  <%= link_to 'Go to HomePage', '/', class:"button button2", method: :get %>
  <%= link_to 'Go to Cars', '/cars', class:"button button2", method: :get %>
  <%= link_to 'Go to Dealerships', '/dealerships', class:"button button2", method: :get %>
</h2>

<hr>

<h1>Update <%=@car.make%> <%=@car.model %></h1>

<%= form_tag "/cars/#{@car.id}", method: :patch do %>
<p>
  <%= label_tag :model, "Model of Your Car (#{@car.model})" %><br>
  <%= text_field_tag :model, @car.model %><br><br>

  <%= label_tag :make, "Make of your Car (#{@car.make})" %><br>
  <%= text_field_tag :make, @car.make %><br><br>

  <%= label_tag :year, "Year of your car (#{@car.year})" %><br>
  <%= text_field_tag :year, @car.year%><br><br>

  <%= label_tag :under_100k_miles, "Under 100k Miles (#{@car.under_100k_miles})" %><br>
  <%= text_field_tag :under_100k_miles, @car.under_100k_miles %><br><br>

  <%= submit_tag 'Update' %>
</p> 
<% end %>