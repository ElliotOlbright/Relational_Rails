<h2>
  <%= link_to 'Go to HomePage', '/', class:"button button2", method: :get %>
  <%= link_to 'Go to Dealerships', '/dealerships', class:"button button2", method: :get %>
</h2>

<hr>

<h1>Cars Index</h1>

<%= form_tag "/cars", method: :get do %>
  <p>
    <%= label_tag :make_of_car, 'Search by Make' %><br>
    <%= text_field_tag :make_of_car %><br>

    <%= submit_tag 'Search'%>
  </p>
<% end %>



<% @cars.each do |car| %>
 <h1>_____________________________________________</h1>
  <h2 id="name"><%= link_to car.model, "/cars/#{car.id}"%></h2>
  <p>Model: <%= car.model %></p>
  <p>Make: <%= car.make%></p>
  <p>Year: <%= car.year %></p>
  <p>Under 100k miles:<%= car.under_100k_miles %></p>
  <p>
    <%= link_to "Edit Car", "/cars/#{car.id}/edit", class:"button button_edit", method: :get %>
    <%= link_to "Delete Car", "/cars/#{car.id}/delete", class:"button button_delete", method: :delete %>
  </p>
<% end %>
 