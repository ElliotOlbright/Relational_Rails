<button class="button button2"><a href="/dealerships">Go to Dealerships</a></button>
<h1>Update <%=@dealership.name %></h1>

<%= form_tag "/dealerships/#{@dealership.id}", method: :patch do %>

<p>  <%= label_tag :name, "Name of Dealership(#{@dealership.name})" %><br>
  <%= text_field_tag :name %><br><br>
</p>
<p>
  <%= label_tag :address, "Dealership Address (#{@dealership.address})" %><br>
  <%= text_field_tag :address %><br><br>
</p>
<p>
  <%= label_tag :open, "Open on Weekends (#{@dealership.open_weekends})" %><br>
  <%= text_field_tag :open %><br><br>
</p>
<p>
  <%= label_tag :years, "Years Open (#{@dealership.years_open})" %><br>
  <%= text_field_tag :open %><br><br>
</p>
<p>
  <%= submit_tag 'Create' %>
</p>
<% end %>