<h2>
  <%= link_to 'Go to HomePage', '/', class:"button button2", method: :get %>
  <%= link_to 'Go to Cars', '/cars', class:"button button2", method: :get %>
  <%= link_to 'Go to Dealerships', '/dealerships', class:"button button2", method: :get %>
</h2>

<hr>

<h1>Update <%=@dealership.name %></h1>

<%= form_tag "/dealerships/#{@dealership.id}", method: :patch do %>

<p>
  <%= label_tag :name, "Name of Dealership(#{@dealership.name})" %><br>
  <%= text_field_tag :name %><br><br>

  <%= label_tag :address, "Dealership Address (#{@dealership.address})" %><br>
  <%= text_field_tag :address %><br><br>

  <%= label_tag :open_weekends, "Open on Weekends (#{@dealership.open_weekends})" %><br>
  <%= text_field_tag :open_weekends %><br><br>

  <%= label_tag :years_open, "Years Open (#{@dealership.years_open})" %><br>
  <%= text_field_tag :years_open %><br><br>

  <%= submit_tag 'Update' %>
</p>
<% end %>