
<h2>
  <%= link_to 'Go to HomePage', '/', class:"button button2", method: :get %>
  <%= link_to 'Go to Cars', '/cars', class:"button button2", method: :get %>
</h2>

<hr>

<h1>Dealership Index</h1>
<p><%= link_to 'New Dealership', '/dealerships/new', class:"button button_create", method: :get %></p>
<p><%=link_to "Sort By Cars On Lot", sort: "model" %> </p>
<%= form_tag "/dealerships", method: :get do %>
  <p>
    <%= label_tag :dealer_name, 'Search by Name' %><br>
    <%= text_field_tag :dealer_name %><br>

    <%= submit_tag 'Search'%>
  </p>
<% end %>

<section id="dealerships">
  <% @dealerships.each do |dealership| %>
    <h1>_____________________________________________</h1>
    <h2 id="name"><%= link_to dealership.name, "/dealerships/#{dealership.id}"%></h2>
    <p id="address"><%= dealership.address %></p>
    <p>
      <%= link_to 'Edit Dealership', "/dealerships/#{dealership.id}/edit", class:"button button_edit", method: :get %>
      <%= link_to 'Delete Dealership', "/dealerships/#{dealership.id}/delete", class:"button button_delete", method: :delete %>
    </p>
  <% end %>
</section>



