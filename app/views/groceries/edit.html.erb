<h1>Update Grocery</h1>

<%= form_tag "/groceries/#{@grocery.id}", method: :patch do %>
<p>
  <%= label_tag :name, 'New grocery name:' %>
  <%= text_field_tag :name %><br>

  <%= label_tag :price, 'New grocery price:' %>
  <%= text_field_tag :price %><br>
  
  <%= label_tag :in_stock, 'In stock?' %>
  <%= text_field_tag :in_stock %><br>

  <%= submit_tag 'Update Grocery' %>
</p>
<% end %>