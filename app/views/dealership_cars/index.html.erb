<h2>
  <%= link_to 'Go to HomePage', '/', class:"button button2", method: :get %>
  <%= link_to 'Go to Cars', '/cars', class:"button button2", method: :get %>
  <%= link_to 'Go to Dealerships', '/dealerships', class:"button button2", method: :get %>
</h2>

<hr>

<h1>Dealership Cars Index</h1>

<h2><%= @dealership.name %></h2>
<p><%= link_to 'Add Car to Lot', "/dealerships/#{@dealership.id}/new", class:"button button_create", method: :get %></p>

  <%= form_tag "/dealerships/#{@dealership.id}/cars", method: :get do %>
  <p>
    <%= label_tag :age, 'Car Age' %>
    <%= text_field_tag :age %><br>

    <%= submit_tag 'Only return records with more than `number` of `years old'%>
  </p>
  <% end %>


<% @cars.each do |car| %>
  <h1>_____________________________________________</h1>
  <h3> <%= car.model %></h3>
  <p>Model: <%= car.model %></p>
  <p>Make: <%= car.make %></p>
  <p>Year: <%= car.year %></p>
  <p>Under 100k miles:<%= car.under_100k_miles %></p>
  <p><%= link_to 'Edit Car', "/cars/#{car.id}/edit", class:"button button2", method: :get %></p>
  <p><%= link_to 'Delete Car', "/cars/#{car.id}/delete", class:"button button_delete", method: :delete %></p>
<% end %>
